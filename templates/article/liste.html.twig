{% extends 'base.html.twig' %}

{% block title %}Liste des articles
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Liste des articles:</h1>

		<div class="row">
			{% for message in app.flashes('edit') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}
			{% for item in article %}
				<div class="card" style="width: 18rem; margin: 1em;">
					<div class="card-body">
						<h5 class="card-title">Article
							{{ item.id }}</h5>
						<h6 class="card-subtitle mb-2 text-muted">{{ item.titre }}</h6>
						<p class="card-text">{{ item.texte }}</p>
						<p class="card-text">{{ item.date | date("m/d/Y") }}</p>
						{% if item.image %}
							<img src="{{ asset('uploads/image/' ~ item.image) }}" alt="Image de {{ item.titre }}" class="img-thumbnail">
						{% else %}
							<img src="{{ asset('images/default.jpg') }}" alt="Image par dÃ©faut" class="img-thumbnail">
						{% endif %}


						<a href="{{ path('app_article_edit', { id: item.id }) }}" class="btn btn-primary">Modifier</a>
						<a href="{{ path('app_article_delete', { id: item.id }) }}" class="btn btn-danger">Supprimer</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
